{
	"name": "@scalapay-test/web",
	"version": "0.1.0",
	"description": "Frontend part of the Scalapay exercise",
	"author": "Simone Taeggi",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"type-check": "npx tsc --noEmit",
		"format:check": "npx prettier --check .",
		"format": "prettier --write .",
		"test": "npx jest --passWithNoTests"
	},
	"dependencies": {
		"next": "15.3.2",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-hot-toast": "^2.5.2",
		"zod": "^3.25.28",
		"zustand": "^5.0.5"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@tailwindcss/postcss": "^4",
		"@types/node": "^22.15.21",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"eslint-config-next": "15.3.2",
		"@types/jest": "^29.5.14",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"prettier": "^3.5.3",
		"tailwindcss": "^4",
		"ts-jest": "^29.3.4",
		"typescript": "^5"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts",
			"tsx"
		],
		"rootDir": "src",
		"testRegex": ".*\\.(spec|test)\\.(ts|tsx)$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s",
			"**/*.(t|j)sx"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "jsdom",
		"preset": "ts-jest"
	}
}
